{
    "name": "jsai",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "serve:client": "vite preview --config vite.config.ts",
        "build:client": "tsc && vite build --config vite.config.ts",
        "dev:server": "nodemon -e ts,js --exec ts-node --project _server/tsconfig.json --transpile-only -r tsconfig-paths/register _server/index.ts",
        "dev:client": "vite --config vite.config.ts",
        "lint:fix:client": "eslint ./_client --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
        "lint:fix:server": "eslint ./_server --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
        "lint:fix:shared": "eslint ./_shared --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
        "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
        "lint": "yarn lint:format && yarn lint:fix:server && yarn lint:fix:shared && yarn lint:fix:client",
        "type-check": "tsc"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/node": "^18.7.18",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "nodemon": "^2.0.20",
        "pre-commit": "^1.2.2",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.0",
        "vite": "^3.1.3",
        "vite-tsconfig-paths": "^3.5.1"
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "phaser": "^3.55.2",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^5.1.1",
        "typeorm": "^0.3.10",
        "typescript": "^4.8.3"
    }
}
