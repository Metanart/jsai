{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",

        "lib": ["ESNext", "DOM", "DOM.Iterable"],

        "strict": true,
        "allowJs": false,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "outDir": "dist",

        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@client/*": ["_client/src/*"],
            "@server/*": ["_server/src/*"],
            "@shared/*": ["_shared/src/*"],
        },
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"],
}